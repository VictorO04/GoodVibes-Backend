generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model confessions {
  id           Int    @id @default(autoincrement())
  message      String @db.VarChar(500)
  message_type String @db.VarChar(50)
  sender       String @db.VarChar(50)
  id_users     Int?
  users        users? @relation(fields: [id_users], references: [id_users], onDelete: NoAction, onUpdate: NoAction, map: "fk_confessions_users")
}

model users {
  id_users    Int           @id @default(autoincrement())
  username    String        @db.VarChar(13)
  email       String        @db.VarChar(50)
  password    String?       @db.VarChar(12)
  anonymous   Boolean
  confessions confessions[]
}
